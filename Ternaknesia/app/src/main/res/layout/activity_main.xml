<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_5"
    tools:context="com.example.root.ternaknesia.MainActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_margin="15dp"
            android:fontFamily="serif"
            android:textSize="15pt"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:hint=""
            android:text="E_Ternak"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blueDrak"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/mainImage"
            android:src="@drawable/images"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <!--<Button
            android:layout_margin="15dp"
            android:hint="Login"
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/textViewSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Arial"
            android:text="Selamat datang di Sistem Informasi peternakan Sapi"
            android:textAlignment="center"
            android:textColor="@color/blueDrak"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>
