<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewHewan"
        android:src="@drawable/ic_sapi_sakit"
        android:layout_width="102dp"
        android:layout_height="102dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="2dp"
            android:id="@+id/textViewNamaPenyakit"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="Text Nama"
            android:textColor="@color/blueDrak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="2dp"
            android:id="@+id/textViewNamaHewan"
            android:text="Text Nama"
            android:textColor="@color/blueDrak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="2dp"
            android:id="@+id/textViewBobot"
            android:text="Text Bobot"
            android:textColor="@color/blueDrak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="2dp"
            android:id="@+id/textViewDate"
            android:text="Text Tanggal"
            android:textColor="@color/blueDrak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>