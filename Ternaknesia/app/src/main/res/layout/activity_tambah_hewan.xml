<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.ternaknesia.TambahHewan"
    android:background="@drawable/ui_3">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textViewJudul"
            android:layout_margin="10dp"
            android:fontFamily="serif"
            android:textSize="12pt"
            android:layout_gravity="center_horizontal"
            android:text="Halaman Tambah Hewam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/blueDrak"
            android:textStyle="bold"/>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:hint="Bobot"
            android:id="@+id/editTextBobot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blueDrak"/>

        <Spinner
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/spinnerJenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/jenis"></Spinner>

        <ImageView
            android:id="@+id/imageViewSapi"
            android:src="@drawable/ic_menu_gallery"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_margin="5dp"
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
