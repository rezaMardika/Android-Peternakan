<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.ternaknesia.InHewan">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:fontFamily="serif"
            android:textSize="15pt"
            android:id="@+id/textViewHewan"
            android:layout_gravity="center_horizontal"
            android:text="Hewan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="text|number"
            android:hint="Bobot"
            android:id="@+id/editTextCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerJenis"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/jenis"></Spinner>

        <EditText
            android:inputType="textEmailAddress"
            android:hint="Bobot"
            android:id="@+id/editTextBobot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="ADD"
            android:id="@+id/buttonSaveSapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <ListView
            android:id="@+id/list_item_Hewan"
            android:layout_width="match_parent"
            android:layout_height="120pt"></ListView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
