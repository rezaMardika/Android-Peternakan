<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.owner.ActivityProfil_Sapi"
    android:background="#00BFFF">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:paddingTop="30dp"
            android:src="@drawable/ic_menu_gallery"
            android:id="@+id/imageViewProfil"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/buttonUpload"
            android:layout_gravity="center"
            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="Upload" />

        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:id="@+id/card_viewprofil"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="360dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="serif"
                    android:hint="Text id"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/textViewBobot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="Arial"
                    android:hint="Text bobot"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/textViewGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="Arial"
                    android:hint="Text gender"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/textViewSakit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="Arial"
                    android:hint="Text Penyakit"
                    android:textSize="10pt" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <Button
                android:id="@+id/buttonJadwal"
                android:layout_gravity="center"
                android:layout_width="50pt"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:hint="Jadwal Pakan" />

            <Button
                android:id="@+id/buttonRiwayat"
                android:layout_gravity="center"
                android:layout_width="50pt"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:hint="Riwayat" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
